<%= simple_nested_form_for @list do |f| %>
  <%= f.input :title %>
  <%= f.input :color %>
  <%= f.select :group_id, options_from_collection_for_select(@groups, 'id', 'title', selected: @list.group_id) %>
  <%= f.fields_for :tasks %>
  <%= f.link_to_add "Add image", :notes, class: 'btn btn-info' %>
  <%= f.button :submit %>
<% end %>
